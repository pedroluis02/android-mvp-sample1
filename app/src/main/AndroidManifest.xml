<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.pedroluis02.android_mvp_sample1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidMVPSample1">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewCompanyActivity"
            android:exported="true"
            android:label="@string/activity_new_company_title" />
        <activity
            android:name=".EmployeesActivity"
            android:label="@string/activity_employees_title"
            android:exported="true" />
        <activity
            android:name=".NewEmployeeActivity"
            android:exported="true"
            android:label="@string/activity_new_employee_title" />
    </application>

</manifest>